{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:react/recommended",
    "pulsovi-browser",
    "airbnb"
  ],
  "ignorePatterns": ["build", "node_modules"],
  "overrides": [{
    "files": ["*.jsx", "*.js"]
  }],
  "parser": "espree",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "settings": {
    "import/resolver": {
        "node": { "extensions": [".js", ".jsx"] }
    }
  },
  "rules": {
    "max-lines-per-function": "off",
    "react-hooks/rules-of-hooks": "error",
    "react/no-typos": "error",
    "react/prop-types": "error"
  }
}
